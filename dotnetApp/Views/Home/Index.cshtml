@{
    ViewData["Title"] = "Airline Management";
}

<div class="container mt-5"> 
    <div class="row">
        <div class="col-md-6 product-showcase">
            <img src="~/images/airline.png" class="img-fluid" alt="Airplane Image">
        </div>

        <div class="col-md-6">
            <h1 class="display-4">Welcome to Airline Management System</h1>
            <p class="lead">Explore the world with our reliable and efficient airline services.</p>
            <hr class="my-4">
            <ul class="list-group">
                <li class="list-group-item">Wide range of destinations</li>
                <li class="list-group-item">Comfortable seating and amenities</li>
                <li class="list-group-item">Excellent customer service</li>
            </ul>
            <div class="mt-4">
                <a href="#" class="btn btn-primary btn-lg">Book a Flight</a>
                <a href="#" class="btn btn-secondary btn-lg ml-3">View Destinations</a>
            </div>
        </div>
    </div>
</div>
